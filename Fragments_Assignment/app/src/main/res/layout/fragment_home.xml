<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/blue_box"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#3a86ff">

            <!-- White Border -->
            <EditText
                android:id="@+id/white_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"
                android:layout_margin="20dp"
                android:drawableStart="@drawable/baseline_search_white_24dp"
                android:hint="Search Products..."
                android:textColorHint="@color/white"
                android:drawablePadding="8dp"
                android:paddingStart="100dp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/trendy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="PRODUCT CATEGORIES"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewAllButton"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/custom_button_background"
                    android:text="View All"
                    android:textAllCaps="false"
                    android:textColor="#3a86ff"
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alignmentMode="alignMargins"
                android:background="@color/white"
                android:columnCount="3"
                android:columnOrderPreserved="true"
                android:padding="8dp"
                android:rowCount="3"
                android:rowOrderPreserved="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/men" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Men"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/women" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Women"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/kid" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Kids"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/beauty" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Beauty"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/footwear" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Footwear"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/bags" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Bags"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/watch"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Watches"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/sunglasses" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sunglasses"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/electronics" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Electronics"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>


            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>