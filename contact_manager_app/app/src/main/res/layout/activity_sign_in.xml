<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/phone_app_background"
    tools:context=".SignInActivity">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="Welcome back! Sign in to your account."
      android:textSize="60dp"
      android:textStyle="bold|italic"/>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/userNameEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      app:startIconDrawable="@drawable/baseline_account_box_24"
      android:layout_marginTop="40dp">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Unique ID" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/PasswordEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:startIconDrawable="@drawable/baseline_lock_person_24"
      android:layout_margin="10dp">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/btnSignIn"
      android:background="@drawable/greybackground"
      android:layout_margin="10dp"
      android:textSize="20dp"
      android:layout_gravity="center"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:text="SignIN" />

</LinearLayout>